<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

        <ImageView
            android:id="@+id/imageViewCalenderID"
            android:layout_width="180dp"
            android:layout_height="79dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/escolherDiasDeAula"
            android:layout_marginTop="74dp"
            app:srcCompat="@drawable/calendario" />

        <TextView
            android:id="@+id/meuNomeID"
            android:layout_width="144dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:fontFamily="serif-monospace"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/escolherDiasDeAula"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="171dp"
            android:fontFamily="serif-monospace"
            android:text="Dias da semana"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/adicionalInfID"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="169dp"
            android:fontFamily="serif-monospace"
            android:text="mais Informacoes"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/minhasInformacoesID"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="99dp"
            android:fontFamily="serif-monospace"
            android:text="Minhas informacoes"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold|italic"
            android:typeface="sans" />
</RelativeLayout>