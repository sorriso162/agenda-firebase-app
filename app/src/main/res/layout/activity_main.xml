<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/infoId"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="@string/angendaInf"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <Button
        android:id="@+id/entrarID"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="287dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/alegreya_sc"
        android:text="ENTRAR"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSenhaID"
        android:layout_width="287dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/baseline_https_black_24dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextEmailID"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:drawableLeft="@drawable/baseline_email_black_24dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="15dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/botaoGoogleID"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="87dp"
        android:layout_marginEnd="72dp"
         />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/entrarID"
        android:layout_marginBottom="79dp"
        android:fontFamily="@font/alegreya_sc"
        android:lineSpacingExtra="8sp"
        android:text="Entre usando o Google"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="normal" />


</RelativeLayout>